<p id="notice"><%= notice %></p>

<h1>My cart</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>

        <td><%= cart.product.name %></td>



      </tr>

    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Product', new_user_product_path(current_user) %>
<% end %>
