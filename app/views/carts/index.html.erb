<p id="notice"><%= notice %></p>

<h1>My cart</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product.name %></td>
        <td><%= cart.product.content %></td>
        <td><%= cart.product.price%></td>
      </tr>
    <% end %>
    <tr>
  <td>Total:</td>
  <td><%= @carts.map{|order| order.product.price}.sum %></td>
</tr>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Product', new_user_product_path(current_user) %>
<% end %>
