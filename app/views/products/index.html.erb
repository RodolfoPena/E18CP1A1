<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', user_product_path(current_user, product.id) %></td>
        <td><%= link_to 'Edit', edit_user_product_path(current_user, product.id) %></td>
        <td><%= link_to 'Remove', user_product_path(current_user, product.id), method: :DELETE %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_user_product_path(current_user) %>
