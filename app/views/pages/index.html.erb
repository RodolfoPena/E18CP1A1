<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.price %></td>
        <td><%= product.user.email%></td>
        <td><%= link_to 'Comprar',  user_product_carts_path(current_user, product), method: :POST %></td>

      </tr>

    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Product', new_user_product_path(current_user) %>
<% end %>
